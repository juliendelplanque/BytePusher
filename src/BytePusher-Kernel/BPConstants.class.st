Class {
	#name : #BPConstants,
	#superclass : #SharedPool,
	#classVars : [
		'ADDRESS_SIZE',
		'AUDIO_POINTER_ADDRESS',
		'AUDIO_SAMPLE_SIZE',
		'FALSE_VALUE',
		'INSTRUCTIONS_PER_STEP',
		'INSTRUCTION_SIZE',
		'KEYBOARD_STATE_ADDRESS',
		'MAX_ADDRESS',
		'MEMORY_SIZE',
		'PIXELS_COUNT',
		'PIXEL_POINTER_ADDRESS',
		'PROGRAM_COUNTER_ADDRESS',
		'TRUE_VALUE',
		'USER_MEMORY_ADDRESS'
	],
	#category : #'BytePusher-Kernel'
}

{ #category : #'class initialization' }
BPConstants class >> initialize [
	KEYBOARD_STATE_ADDRESS := 0.
	PROGRAM_COUNTER_ADDRESS := 2.
	PIXEL_POINTER_ADDRESS := 5.
	AUDIO_POINTER_ADDRESS := 6.
	USER_MEMORY_ADDRESS := 8.
	INSTRUCTIONS_PER_STEP := 65536.
	ADDRESS_SIZE := 3.
	INSTRUCTION_SIZE := ADDRESS_SIZE * 3.
	PIXELS_COUNT := 256*256.
	AUDIO_SAMPLE_SIZE := 256.
	MEMORY_SIZE := 16r1000000.
	MAX_ADDRESS := MEMORY_SIZE - 1.
	FALSE_VALUE := 16r10.
	TRUE_VALUE := FALSE_VALUE + INSTRUCTION_SIZE.
]
